  <link href="/stylesheets/signin.css" type="text/css" rel="stylesheet">


  <div class="container">
    <form class="form-signin" action="/signup" method="POST">
      <h2 class="form-signin-heading">Signup</h2>
      <label for="emailField" class="sr-only">Email address</label>
      <input type="email" name="email" class="form-control" id="emailField" placeholder="Email" required autofocus>
      <label for="passwordField" class="sr-only">Password</label>
      <input type="password" name="password" class="form-control" id="passwordField" placeholder="Password" required>
      <button type="submit" class="btn btn-lg btn-primary btn-block">Sign Up</button>
    </form>

    <hr>

  </div> <!-- /container -->
